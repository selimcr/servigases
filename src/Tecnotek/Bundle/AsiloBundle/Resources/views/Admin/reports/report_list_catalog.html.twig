{% extends 'TecnotekAsiloBundle:Admin:layouts/admin_layout.html.twig' %}


{% block js %}
    <script src="{{ asset('admin/js/tecnotek/tech506_reports.js') }}"></script>
    <script src="{{ asset('admin/js/jquery.printElement.min.js') }}"></script>
    <script type="text/javascript">
        Tecnotek.module = "reports";
        Tecnotek.UI.urls["loadGroupsOfActivity"] = "{{ path('_pilar_gamboa_admin_load_group_of_activity')}}";
        Tecnotek.UI.urls["loadGroupsOfPatients"] = "{{ path('_pilar_gamboa_admin_load_group_of_patients')}}";
    </script>
{% endblock js %}

{% block mainContent %}
    <!--overview start-->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-laptop"></i> {{ 'dashboard'|trans }}</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
                <li><i class="fa fa-laptop"></i>{{ 'patiens.list'|trans }}</li>
            </ol>
        </div>
    </div>
    <div id="activitySelects" class="left">
        <!-- <select id="activityTypeId" name="activityTypeId" style="width: 150px;">
            {% for activity in entities %}
                <option value="{{ activity.id }}">{{activity.name}}</option>
            {% endfor %}
        </select>-->
        <select id="activityTypeId" name="activityTypeId" style="width: 150px;">
            <option value="-1">{%trans%}Seleccione Tipo{%endtrans%}</option>
            <option value="Sport">{%trans%}sports{%endtrans%}</option>
            <option value="Dance">{%trans%}dance{%endtrans%}</option>
            <option value="Manuality">{%trans%}manuality{%endtrans%}</option>
            <option value="EntertainmentActivity">{%trans%}entertainmentActivity{%endtrans%}</option>
        </select>

        <select id="activitiesOptions" name="activitiesOptions" style="width: 150px;">
        </select>
    </div>
    <hr>
    <div style="margin-top: 15px;">
        <button style="margin-left: 15px; margin-top: 0px;" type="button" class="right button success-darker tiny" id="btnPrint" name="btnPrint" rel="Reporte"><span></span>{% trans %}label.print{% endtrans %}</button>
        <div class="clear"></div>
    </div>
    </br>
    <div id="report" style="margin-top: 25px; width: 950px;">
        <div>
            <div class="left">
                <h3>{% trans %}label.report.list.catalog{% endtrans %}</h3>
            </div>
            <div class="left" style="line-height: 48px; margin-left: 25px;">
                <span>Detalle de beneficiaros que realizan la actividad.</span>
                <label id="activityLabel"></label> <label id="activityTypeLabel"></label>
            </div>
            <div class="clear"></div>
        </div>
        <table border="1" id="patientsTable" class="table table-striped table-bordered table-hover">
            <tr>
                <td style="float: left;  width:120px; height: 22px;"><span style="font-family:arial;font-size:14px;">{%trans%}label.report.id{%endtrans%}</span></td>
                <td style="float: left;  width:300px; height: 22px;"><span style="font-family:arial;font-size:14px;">{%trans%}label.report.name{%endtrans%}</span></td>
            </tr>
            {% for patient in patients %}
                <tr>
                    <td style="float: left;  width:120px; height: 22px;"><span style="font-family:arial;font-size:14px;">&nbsp{{ patient.id }}</span></td>
                    <td style="float: left;  width:300px; height: 22px;"><span style="font-family:arial;font-size:14px;">&nbsp{{ patient.name }}</span></td>
                </tr>
            {% endfor %}


        </table>
    </div>

{% endblock mainContent %}