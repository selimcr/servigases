{% extends 'TecnotekAsiloBundle:Admin:layouts/admin_layout.html.twig' %}

{% block js %}
    <script src="{{ asset('admin/js/tecnotek/tecnotek_results.js') }}"></script>

    <script type="text/javascript">
        Tecnotek.module = "results";
        Tecnotek.UI.urls['render-yes-no-results'] = "{{ path('_activity_results_yes_no', {'itemId':'xid'} ) }}";
        google.load("visualization", "1", {packages:["corechart"]});
    </script>
{% endblock js %}

{% block mainContent %}
<!--overview start-->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> {{ 'cognitivities.activities'|trans }}</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
            <li><i class="fa fa-bar-chart-o"></i>{{ activityType }}</li>
        </ol>
    </div>
</div>

{% for activity in activityType.activities %}
    {% for item in activity.items %}
        {% if item.type == 1 %}
            <div class="row yes-no-item-results" item-id="{{ item.id }}">
                <div class="loader">Loading...</div>
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}
{% endblock mainContent %}