<div id="add-services-container" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog form-modal">
        <form class="form-horizontal">
            <div class="modal-content">
                <div class="modal-header">
                    {{ 'add.service'|trans }}
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form class="form-inline">
                            <div class="col-lg-12 col-sm-12">
                                <!-- Service Product -->
                                <div class="form-group">
                                    <label for="product">{{ 'select.service'|trans }}&nbsp;&nbsp;&nbsp;</label>
                                    {{ renderServicesSelect(onManaging)|raw }}
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <table id="pricesTable" class="table table-striped table-hover">
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn" data-dismiss="modal">{{ 'cancel'|trans }}</a>
                </div>
            </div>
        </form>
    </div>
</div>