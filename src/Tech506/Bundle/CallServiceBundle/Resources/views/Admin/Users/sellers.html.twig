{% extends 'Tech506CallServiceBundle:Admin:layouts/admin_layout.html.twig' %}

{% block css %}
    <link href="{{ asset('admin/css/fileinput.min.css') }}" media="all" rel="stylesheet" type="text/css" />
{% endblock css %}

{% block js %}
    <script src="{{ asset('admin/js/fileinput.min.js') }}"></script>
    <script src="{{ asset('admin/js/fileinput_locale_es.js') }}"></script>
    <script src="{{ asset('admin/js/tech506/tech506_sellers.js') }}"></script>

    <script type="text/javascript">
        Tech506.module = "sellers-list";
        Tech506.UI.translates["edit"] = "{{ 'edit'|trans }}";
        Tech506.UI.translates['field.not.empty'] = "{{ 'validation.not.empty'|trans }}";
        Tech506.UI.translates['confirm-delete'] = "{{ 'confirm.catalog.delete'|trans }}";
        Tech506.UI.urls['save'] = "{{ path('_admin_sellers_save') }}";
        Tech506.UI.urls['delete'] = "{{ path('_admin_sellers_delete') }}";
        Tech506.UI.vars['default-avatar-url'] = "{{ asset('admin/img/default_avatar_male.jpg') }}";
        Tech506.UI.vars["avatars-path"] = "{{ asset('uploads/avatars/') }}";
        Tech506.UI.urls['saveAvatar'] = "{{ path('_admin_users_save_avatar') }}";
    </script>
{% endblock js %}

{% block mainContent %}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
                <li><i class="fa fa-users"></i>{{ 'Sellers'|trans }}</li>
            </ol>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Sellers'|trans }} <small>{{ 'list'|trans }}</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div id="custom-toolbar">
                        <div class="form-inline" role="form">
                            <button type="button" id="btn-new" class="btn btn-primary" ref="0" data-toggle="modal"
                                    data-target="#form-content" title="{{ 'create'|trans }}">{{ 'new'|trans }}</button>
                        </div>
                    </div>
                    <table id="catalog-list" class="table table-striped responsive-utilities jambo_table"
                           data-toolbar="#custom-toolbar"
                           data-toggle="table"
                           data-url="{{ path('_admin_sellers_list') }}"
                           data-side-pagination="server"
                           data-card-view="false"
                           data-show-refresh="true" data-show-columns="true"
                           data-search="true" data-select-item-name="toolbar1"
                           data-pagination="true"
                           data-page-list="[10, 25, 50, 100]"
                           data-sort-name="name"
                           data-sort-order="asc">
                        <thead>
                        <tr>
                            <th data-field="name" data-sortable="true" class="col-md-3">
                                {{ 'name'|trans }}
                            </th>
                            <th data-field="lastname" data-sortable="true" class="col-md-3">
                                {{ 'lastname'|trans }}
                            </th>
                            <th data-field="username" data-sortable="true" class="col-md-3">
                                {{ 'username'|trans }}
                            </th>
                            <th data-field="email" data-sortable="true" class="col-md-3">
                                <i class="glyphicon glyphicon-envelope"></i>
                                {{ 'email'|trans }}
                            </th>
                            <th data-field="cellPhone" data-sortable="true" class="col-md-2">
                                <i class="glyphicon glyphicon-phone"></i>
                                {{ 'cellPhone'|trans }}
                            </th>
                            <th data-field="isActive" data-sortable="true" class="col-md-2"
                                data-formatter="Tech506.Sellers.List.yesNoFormat">
                                {{ 'active'|trans }}
                            </th>
                            <th data-field="operate" data-card-visible="false" data-searchable="false"
                                data-formatter="Tech506.Sellers.List.operateFormatter"
                                data-events="Tech506.Sellers.List.operateEvents">{{ 'actions'|trans }}</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock mainContent %}

{% block bodyModals %}
    <div id="form-content" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog form-modal">
            <form class="form-horizontal" id="form-catalog">
                <input type="hidden" id="id" name="id" value="0">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="" role="tabpanel" data-example-id="togglable-tabs">
                            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                                <li role="presentation" class="active"><a href="#main" data-toggle="tab" aria-expanded="true">{{ 'user.info.main'|trans }}</a></li>
                                <li role="presentation"><a href="#employee-info" data-toggle="tab">{{ 'user.info.employee'|trans }}</a></li>
                            </ul>
                            <div id="myTabContent" class="tab-content">
                                <div role="tabpanel" class="tab-pane fade  active in" id="main">
                                    {{ include('Tech506CallServiceBundle:Admin:Users/user_form.html.twig') }}
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="employee-info">
                                    {{ include('Tech506CallServiceBundle:Admin:Users/sellers_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input class="btn btn-success" type="submit" value="{{ 'save'|trans }}">
                        <a href="#" class="btn" data-dismiss="modal">{{ 'cancel'|trans }}</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock bodyModals %}