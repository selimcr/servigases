{% extends 'Tech506CallServiceBundle:Admin:layouts/admin_layout.html.twig' %}

{% block css %}
    <link href="{{ asset('admin/css/fileinput.min.css') }}" media="all" rel="stylesheet" type="text/css" />
{% endblock css %}

{% block js %}
    <script src="{{ asset('admin/js/fileinput.min.js') }}"></script>
    <script src="{{ asset('admin/js/fileinput_locale_es.js') }}"></script>
    <script src="{{ asset('admin/js/tech506/tech506_sales_OBSOLETE.js') }}"></script>

    <script type="text/javascript">
        Tech506.module = "calls-list";
    </script>
{% endblock js %}

{% block mainContent %}
    <!--overview start-->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-uesrs"></i> {{ 'Sales'|trans }}</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
                <li><i class="fa fa-phone"></i>{{ 'Sales'|trans }}</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default panel panel-primary">
                <!-- Default panel contents -->
                <div class="panel-heading">{{ 'Sales'|trans }}</div>
                <!-- Table -->
                <div id="custom-toolbar">
                    <div class="form-inline" role="form">
                        <a class="btn btn-primary" href="{{ path('_admin_sales_call_new') }}">{{ 'new'|trans }}</a>
                    </div>
                </div>

                <table id="catalog-list" class="table table-striped table-bordered table-hover"
                       data-toolbar="#custom-toolbar"
                       data-toggle="table"
                       data-url="{{ path('_admin_calls_list') }}"
                       data-side-pagination="server"
                       data-height="400"
                       data-card-view="false"
                       data-show-refresh="true" data-show-toggle="true" data-show-columns="true"
                       data-search="true" data-select-item-name="toolbar1"
                       data-pagination="true"
                       data-page-list="[10, 25, 50, 100]"
                       data-sort-name="name"
                       data-sort-order="asc">
                    <thead>
                    <tr>
                        <th data-field="seller" data-sortable="true" class="col-md-3">
                            {{ 'seller'|trans }}
                        </th>
                        <th data-field="client" data-sortable="true" class="col-md-3">
                            {{ 'client'|trans }}
                        </th>
                        <th data-field="dateTime" data-sortable="true" class="col-md-3">
                            {{ 'dateTime'|trans }}
                        </th>
                        <th data-field="operate" data-card-visible="false" data-searchable="false"
                            data-formatter="Tech506.Sales.Calls.List.operateFormatter"
                            data-events="Tech506.Sales.Calls.List.operateEvents">{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
        <!--/col-->
    </div>
{% endblock mainContent %}